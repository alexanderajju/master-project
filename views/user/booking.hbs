<section class="rooms">
    <div class="container">
        <h5 class="section-head">
            <span class="checkout">
                <h3>â‚¹: {{total}}</h3>
                <a class="btn  checkout-btn" href="/place_order">Checkout</a>
            </span>

            <span class="heading">Booking</span>


        </h5>


        <div class="grid rooms-grid">


            {{#if rooms}}
            {{#each rooms}}
            {{#if_eq ../date ./this.closingTime }}
            <div class="grid-item featured-rooms">

                <div class="image-wrap">

                    <img class="room-image" src="/HOTEL/{{this.room._id}}.jpg" alt="" />
                    <h5 class="room-name"> {{this.room.hotel}}</h5>
                </div>
                <div class="room-info-wrap">
                    <div>
                        <span class="room-price">${{this.room.price}} <span class="per-night">Per Night</span>
                        </span>

                        <p class="paragraph"> {{this.room.description}}</p>


                        <div class="features">
                            {{#each this.room.features}}
                            <h5>
                                {{this}}
                            </h5>
                            {{/each}}
                        </div>




                    </div>




                </div>

            </div>
            {{else}}
            <div class="grid-item featured-rooms">
                <div class="image-wrap">

                    <a onclick="bookingorder('{{this.room._id}}')" class="sm-link deleteroom btn  rooms-btn delete"><i
                            class="fas fa-trash-alt"></i></a>
                    <img class="room-image" src="/HOTEL/{{this.room._id}}.jpg" alt="" />
                    <h5 class="room-name"> {{this.room.hotel}}</h5>
                </div>
                <div class="room-info-wrap">
                    <div>
                        <span class="room-price">${{this.room.price}} <span class="per-night">Per Night</span>
                        </span>

                        <p class="paragraph"> {{this.room.description}}</p>


                        <div class="features">
                            {{#each this.room.features}}
                            <h5>
                                {{this}}
                            </h5>
                            {{/each}}
                        </div>


                    </div>

               </div>

            </div>

            {{/if_eq}}

            {{/each}}

            {{else}}
            <h2 style="text-align: center; left: 0;margin-top: 50px;">Currently no room added</h2>
            {{/if}}




        </div>


    </div>
</section>
