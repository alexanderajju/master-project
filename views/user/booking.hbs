<script>

    function bookingorder(id) {

        console.log(id)
        if (!confirm('Are you sure?')) return false;
        $.ajax({
            url: "/removebooking",
            data: {
                id: id,
            },
            method: 'post',
            success: (response) => {

                if (response.status) {
                    console.log(response)
                    location.reload()
                } else {
                    alert(">>>>>>")
                }
            }


        })
    }
</script>