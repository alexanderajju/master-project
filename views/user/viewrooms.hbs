<section class="rooms">
    <div class="container">
        <h5 class="section-head">
            <span class="heading">Luxurious</span>
            <span class="sub-heading">Affordable rooms</span>
            <a style=" float: right;
    padding: 10px;
    background-color: #1db502;
    border-radius: 5px" href="/hotelReview/?id={{query.id}}&hotel={{query.hotel}}">Review</a>
        </h5>

        <div class="grid rooms-grid">


            {{#if rooms}}

            {{#each rooms}}



            <div class="grid-item featured-rooms">
                <div class="image-wrap">
                    <h5 style="cursor: pointer;" class="bookingroom btn  rooms-btn"> <a
                            href="/checkout/?id={{this._id}}">Book Now
                            &rarr;</a></h5>
                    <img class="room-image" src="/HOTEL/{{this._id}}.jpg" alt="" />
                    <h5 class="room-name"> room {{this.roomnumber}}</h5>
                </div>
                <div class="room-info-wrap">
                    <span class="room-price">â‚¹{{this.price}} <span class="per-night">Per Night</span>
                    </span>
                    <p class="paragraph">
                        {{this.description}}
                    </p>
                    <div class="features">
                        {{#each this.features}}
                        <h5 class="feature_h5">
                            {{this}}
                        </h5>
                        {{/each}}
                    </div>

                </div>
            </div>





            {{/each}}
            {{else}}
            <h1 class="noroom">Currently NO rooms availabe</h1>
            {{/if}}










        </div>
    </div>
</section>
