<div class="hero">
    <div class="container">
        <section class="contact">
            <div class="container">
                <h5 class="section-head">
                    <span class="heading destination">ADD ROOM</span>

                </h5>
                <div class="contact-content">
                    <div class="traveler-wrap">
                        <img id="image-view" src="" alt="" />
                    </div>
                    <form action="/hotel/addroom" method="POST" enctype="multipart/form-data"
                        class="form contact-form destination-add">
                        <div class="input-group">
                            <input type="number" id="roomnumber" name="roomnumber" placeholder="Room Number"
                                class="input" />
                            <span class="bar"></span>
                        </div>
                        <div class="input-group">
                            <input type="number" id="price" name="price" placeholder="price" class="input" />
                            <span class="bar"></span>
                        </div>
                        <div class="input-group">
                            <textarea cols="30" rows="8" maxlength="105" name="description" placeholder="Type...."
                                class="input"></textarea>
                            <span class="bar"></span>
                        </div>
                        <div class="input-group">
                            <select name="Destination" id="Destination" class="options">
                                <option value="">select</option>
                                {{#each destination}}
                                <option value="{{this.item}}">{{this.item}}</option>
                                {{/each}}
                            </select>
                        </div>


                        <div class="input-group">

                            <div class="checkboxes">


                                <div class="checkbox-left">

                                    <label for="features">
                                        <input type="checkbox" value=" Drinking water" id="features" name="features" />
                                        Drinking water
                                    </label>
                                    <label for="features">
                                        <input type="checkbox" value="  Wifi" id="features" name="features" />
                                        Wifi
                                    </label>
                                    <label for="features">
                                        <input type="checkbox" value=" Hot water" id="features" name="features" />
                                        Hot water
                                    </label>



                                </div>
                                <div class="checkbox-right">

                                    <div class="checkbox-right">
                                        <label for="features">Shelves /drawer
                                            <input type="checkbox" value="Shelves /drawer" id="features"
                                                name="features" />
                                        </label>
                                        <label for="features">Minibar / Fridge
                                            <input type="checkbox" value="Minibar / Fridge" id="features"
                                                name="features" />
                                        </label>

                                        <label for="features">Air-conditioning
                                            <input type="checkbox" value="Air-conditioning" id="features"
                                                name="features" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="input-group">
                            <input type="file" id="image" name="image" placeholder="Add Hotel's image" class="input "
                                onchange="viewImage(event)" />
                            <span class="bar"></span>
                        </div>
                        <button class="btn form-btn btn-purple" type="submit">
                            Add Room
                            <span class="dots"><i class="fas fa-ellipsis-h"></i></span>
                        </button>
                    </form>
                </div>

            </div>
        </section>

    </div>
</div>


<script>
    function viewImage(event) {
        document.getElementById('image-view').src = URL.createObjectURL(event.target.files[0])
    }
</script>

<style>
    .hero {
        height: 100%;
    }

    input[type=checkbox] {
        vertical-align: middle;
        position: relative;
        bottom: 1px;
    }





    input[type=checkbox],
    label {
        color: rgb(10, 10, 10);
        font-weight: 600;
        font-family: 'Courgette'
    }

    .checkboxes {
        display: flex;
        justify-content: space-evenly;
    }

    .checkbox-left {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: self-start;
    }

    .checkbox-right {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-end;
    }
</style>