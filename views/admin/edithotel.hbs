<div class="hero" style="margin-top: 25px;">
    <div class="container">
        <section class="contact">
            <div class="container">
                <h5 class="section-head">
                    <span class="heading destination">Edit Hotel</span>
                </h5>
                <div class="contact-content">
                    <div class="traveler-wrap">
                        <img id="image-view" src="/HOTEL/{{hotel._id}}.jpg" alt="" />
                    </div>
                    <form action="/admin/edithotel/{{hotel._id}}" method="POST" enctype="multipart/form-data"
                        class="form contact-form destination-add">


                        <div class="input-group-wrap">
                            <div class="input-group">
                                <input type="text" id="Name" name="Name" value="{{hotel.Name}}" placeholder="Hotel Name"
                                    class="input" />
                                <span class="bar"></span>
                            </div>

                            <div class="input-group">
                                <input type="tel" id="Mobile" value="{{hotel.Mobile}}" name="Mobile"
                                    placeholder="Mobile" class="input" />
                                <span class="bar"></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <input type="text" id="username" value="{{hotel.username}}" name="username"
                                placeholder="User Name" class="input" />
                            <span class="bar"></span>
                        </div>


                        <div class="input-group">

                            <div class="checkboxes">
                                <input type="hidden"  name="destination" placeholder="User Name" />
                                {{#each hotel.destination}}
                                <input type="checkbox" checked="{{this}}" value="{{this}}" name="destination"
                                    placeholder="User Name" />
                                <h3>{{this}}</h3>
                                {{/each}}


                            </div>




                        </div>


                        <div class="input-group">
                            <input type="file" id="image" name="image" placeholder="Add Hotel's image" class="input  "
                                onchange="viewImage(event)" />
                            <span class="bar"></span>
                        </div>
                        <button class="btn form-btn btn-purple" type="submit">
                            Edit Hotel
                            <span class="dots"><i class="fas fa-ellipsis-h"></i></span>
                        </button>
                    </form>
                </div>

            </div>
        </section>

    </div>
</div>


<script>
    function viewImage(event) {
        document.getElementById('image-view').src = URL.createObjectURL(event.target.files[0])
    }
</script>

<style>
    body {
        overflow-y: hidden;
        color: black !important;
    }

    .checkboxes {
        display: flex;
        justify-content: space-evenly;
        align-items: baseline;
    }

    .contact-form .input {
        color: #000;
    }
</style>